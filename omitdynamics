#!/usr/bin/env raku

my regex dynamic {
   | (\\p+)<?wb>
   | (\\mp)<?wb>
   | (\\mf)<?wb>
   | (\\f+)<?wb>
   | (\\fp)<?wb>
   | (\\sfz)<?wb>
   | (\\cresc)<?wb>
   | (\\dim)<?wb>
   | (\\\<)
   | (\\\>)
}

for lines() -> $_ is copy {
    s:g{<dynamic>} = '\omit' ~ $/;
    s:g/\\omit\\omit/\\omit/; # in case we run this multiple times over the same code
    .say;
}
